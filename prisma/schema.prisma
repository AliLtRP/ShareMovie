// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DB")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique()
  email    String  @unique()
  name     String?
  password String
  hashedRt String? // hashed refresh token
}

model Followers {
  followed_id         String   @id @default(auto()) @map("_id") @db.ObjectId
  followers_id        String[] @db.ObjectId // store the id for the followers 
  number_of_followers Int // number of the followers
}
